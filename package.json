{
  "name": "eclipse-rougelike",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "codegen": "convex codegen",
    "build": "npm run codegen && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "NODE_OPTIONS=--max-old-space-size=6144 vitest run --pool=threads --maxWorkers=1 --reporter=dot",
    "test:stable": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=threads --maxWorkers=1 --reporter=dot",
    "test:ui": "vitest --ui",
    "check:app-lines": "node tools/check-app-lines.mjs",
    "check:gameroot-lines": "node tools/check-gameroot-lines.mjs",
    "typecheck": "tsc -p . --noEmit",
    "test:ci": "vitest run --pool=forks --reporter=dot",
    "test:ci:shard1": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=forks --maxWorkers=1 --reporter=dot --shard=1/6",
    "test:ci:shard2": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=forks --maxWorkers=1 --reporter=dot --shard=2/6",
    "test:ci:shard3": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=forks --maxWorkers=1 --reporter=dot --shard=3/6",
    "test:ci:shard4": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=forks --maxWorkers=1 --reporter=dot --shard=4/6",
    "test:ci:shard5": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=forks --maxWorkers=1 --reporter=dot --shard=5/6",
    "test:ci:shard6": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --pool=forks --maxWorkers=1 --reporter=dot --shard=6/6",
    "test:batched": "node tools/run-tests-batched.mjs",
    "ci": "npm run lint && npm run typecheck && npm run test:run && npm run build && npm run check:app-lines",
    "orchestrator": "bash orchestrator.sh",
    "agents": "bash scripts/agents.sh",
    "agents:check": "node tools/agents-check.mjs",
    "agents:logs": "node tools/agents-logs.mjs",
    "agents:logs:all": "node tools/agents-logs.mjs --all",
    "agents:logs:one": "node tools/agents-logs.mjs --agent=$AGENT --lines=${LINES:-60}"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "convex": "^1.26.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.7",
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
